{% for param in params %}

    <form method="post" action="/blog/edit">
        <div class="field">
            <label class="label">Название записи</label>
            <div class="control">
                <textarea class="textarea" name="title" cols="80" rows="1">{{ param.title }}</textarea>
            </div>
        </div>
        <div class="field">
            <label class="label">Текст записи</label>
            <div class="control">
                <textarea class="textarea" name="content" cols="80" rows="10">{{ param.content }}</textarea>
            </div>
        </div>
        <input type="hidden" name="id" value="{{ param.id }}">
        <div class="field is-grouped">
            <div class="control">
                <input type="submit" class="button is-link">
            </div>
        </div>
    </form>
{% endfor %}